<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="plone.app.imaging">

  <include package="plone.app.imaging" />

  <include zcml:condition="installed plone.app.blob"
      package="plone.app.blob.tests" file="testing.zcml" />

  <browser:pages
      for="Products.Archetypes.interfaces.IBaseObject"
      permission="zope.Public">
    <browser:page
        name="explicit-tag-generation"
        template="tests/snippets/explicit-tag-generation.pt" />
    <browser:page
        name="automatic-tag-generation"
        template="tests/snippets/automatic-tag-generation.pt" />
    <browser:page
        name="tag-generation-with-scalename"
        template="tests/snippets/tag-generation-with-scalename.pt" />
    <browser:page
        name="shortcut-tag-for-scale"
        template="tests/snippets/shortcut-tag-for-scale.pt" />
    <browser:page
        name="shortcut-tag-for-image"
        template="tests/snippets/shortcut-tag-for-image.pt" />
  </browser:pages>

</configure>
